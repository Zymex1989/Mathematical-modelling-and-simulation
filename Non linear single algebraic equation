# non linear single algebraic equation
# the equation to be solved is:
# sin(x) - x^2 = 0
# we need to find the value of x that would satisfy the equation above

import numpy as np
import numpy.linalg as nl
import math

tol = 1.0e-06
max_iter = 10

def f(x):
    return np.sin(x) - x * x


def df(x):
    return math.cos(x) - 2.0 * x


itr = 0  # iteration counter
x = 1.0  # initial guess
res = f(x)  # initial function evaluation

while abs(res) > tol and itr < max_iter:
    itr += 1
    res = f(x)
    print("Iteration number ", itr, "x is ", x, "f(x) is ", res)
    x = x - res / df(x)

if abs(res) < tol:
    print("converged to ", x)
else:
    print("Did not converged")
